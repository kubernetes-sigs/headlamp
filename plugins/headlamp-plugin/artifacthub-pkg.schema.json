{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ArtifactHub Package",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "keywords",
    "links",
    "maintainers"
  ],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "description": { "type": "string" },
    "keywords": {
      "type": "array",
      "items": { "type": "string" }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "url"],
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string", "format": "uri" }
        }
      }
    },
    "maintainers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "email"],
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string", "format": "email" }
        }
      }
    },
    "provider": { "type": "string" },
    "repository": { "type": "string" },
    "license": { "type": "string" },
    "homeURL": { "type": "string", "format": "uri" },
    "readme": { "type": "string" },
    "install": { "type": "string" },
    "changes": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": true
}
